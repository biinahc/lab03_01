{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,

    

    "strict": true, 
    "types": [
      "node",
      "jest"
    ],
    

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,


    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": false,
    "skipLibCheck": true
  },

  "exclude": [
    "node_modules",
    "jest.config.ts" 
  ]
}